@model IEnumerable<ASPTraining.Models.Improvement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <div class="col-md-3">
        @foreach (var item in Model)
        {
            <h3>@Html.ActionLink(item.Description, "Index", new { id = item.ID })</h3>
            <p>@Html.DisplayFor(modelItem => item.Status.Description)</p>
        }
    </div>
    <div class="col-md-9">
        @{Html.RenderPartial("Details", Model.FirstOrDefault(i => i.ID == ViewBag.SelectedId)); }
    </div>

</div>
       
